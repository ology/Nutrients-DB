<div id="page">

    <div id="content">

        <div id="header">
            <h1><a href="/" style="text-decoration: none;">[% page_title %]</a></h1>
        </div>

        <div id="foods">
[% INCLUDE 'alpha.tt' %]

[% IF results.size %]
            <form action="/compare" method="post">
            <p>
            <input type="submit" name="submit" value="Compare" />
            <input type="reset" name="reset" value="Reset" />

            <ol>
[% FOREACH key IN results.keys.sort %]
            <li>
                <input type="checkbox" name="compare" value="[% results.$key.id %]" />
                <a href="/food?id=[% results.$key.id %]">[% results.$key.food %]</a>
            </li>
[% END %]
            </ol>

            </form>

[% END %]
        </div>

    </div>

</div>
